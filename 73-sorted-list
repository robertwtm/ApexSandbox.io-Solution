public boolean isSorted(List<Integer> numbers) {
    //code here
    Boolean listaOrdenada;
    if(numbers.size()<=1){return true;}
    
    for(Integer i=0;i<numbers.size()-1;i++){
        if(numbers[i]<=numbers[i+1]){
            listaOrdenada=true;
        }
        else
        {
            listaOrdenada=false;
            break;
        }
    }
    if(?listaOrdenada){
        for(Integer i=0;i<numbers.size()-1;i++){
                if(numbers[i]>=numbers[i+1]){
                    listaOrdenada=true;
                }
                else
                {
                    listaOrdenada=false;
                    break;
                }
            }

    }
    return listaOrdenada;
}