public void createCourseAndClass(String name, String description) {
    apxio__Course__c curso = new apxio__Course__c(
        curso.Name = name,
        curso.apxio__Course_Details__c = description
    );
    insert curso;
    apxio__Class__c cursoFilho = new apxio__Class__c(
        cursoFilho.Name = name,
        cursoFilho.apxio__Description__c = description?.left(255),
        cursoFilho.apxio__Course__c = curso.Id
    );
    insert cursoFilho;
}


