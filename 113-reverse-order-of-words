public String reverseWordsInASentence(String sentence){
    if(sentence == null){
        return null;
    }

    List<String> words = sentence.split(' ');
    Integer n = words.size();
    String reverseString = '';

    for(Integer i=n-1;i>=0;i--){
         reverseString +=words.get(i)+' ';
    }
    return reverseString.trim();
}